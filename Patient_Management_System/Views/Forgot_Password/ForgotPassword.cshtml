@model Patient_Management_System.ViewModel.ForgotPasswordVM



@{
    ViewBag.Title = "Forgot Password";
}



@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        <p style="color: red; text-align: center;">@ViewBag.Message</p>
    </div>
}
@using (Html.BeginForm("ForgotPassword", "Forgot_Password", FormMethod.Post))
{
    <div class="login-container">


        <img src="~/Content/Doctor/img/forgot_icon.png" alt="Doctor Logo" class="login-logo">


        <div class="form-group">


            <label>Email:</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
            @*<input type="email" name="email" class="form-control" required placeholder="Enter your Email" />*@
        </div>

        <div class="button-group">
            <button type="submit" class="btn-login">Reset Password</button>

            <button type="button" class="btn-cancel" onclick="goBack()">Cancel</button>

            <script>
                    function goBack()
                    {
                        if (document.referrer)
                        {
                            window.history.back();
                        }
                    }
    }
            </script>

        </div>

    </div>
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .login-container {
        width: 100%;
        max-width: 350px;
        margin: 100px auto;
        background: linear-gradient(135deg, #6f42c1, #20c997);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        color: white;
    }

    .login-title {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .login-logo {
        width: 100px;
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
    }

    .btn-login, .btn-cancel {
        width: 48%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    .btn-login {
        background-color: #000000;
        color: white;
    }

        .btn-login:hover {
            background-color: #333333;
        }

    .btn-cancel {
        background-color: #dc3545;
        color: white;
    }

        .btn-cancel:hover {
            background-color: #a71d2a;
        }
</style>
