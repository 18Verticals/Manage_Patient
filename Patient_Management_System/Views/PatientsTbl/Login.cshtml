@model Patient_Management_System.Models.PatientsTbl

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "PatientsTbl", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <link href="~/Content/login.css" rel="stylesheet" />
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="text-danger">@ViewBag.Message</div>
    }

    <div class="form-horizontal">
        <div class="form-group col-md-4">
            <div class="form__group field">
                @Html.EditorFor(model => model.P_Email, new { htmlAttributes = new { @class = "form__field", required = "required", placeholder = "Enter your Email" } })
                @*<label for="Email" class="form__label">Email</label>*@
                @Html.ValidationMessageFor(model => model.P_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="form__group field">
                @Html.PasswordFor(model => model.P_Password, htmlAttributes: new { @class = "form__field", required = "required", placeholder = "Enter your Password" })
                @*<label for="Password" class="form__label">Password</label>*@
                @Html.ValidationMessageFor(model => model.P_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button value="Login"><b>Submit</b></button>

                <br><br>
                <p style="margin-left: 75px; font-size: 14px;">
                    Don't have an Accunt'? <a href="Register" style="text-decoration: none; color: black;"><b>Register</b></a>
                </p>
            </div>
        </div>

    </div>
}

