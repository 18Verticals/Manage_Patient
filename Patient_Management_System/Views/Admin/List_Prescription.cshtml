﻿
@{
    ViewBag.Title = "List_Prescription";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}



<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Prescription</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="Add_Prescription" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i>Add Prescription</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-border table-striped custom-table datatable mb-0">
                <thead>
                    <tr>
                        <th class="text-right">ACTION</th>
                        <th>ID</th>
                        <th>Dr ID</th>
                        <th>Patient ID</th>
                        <th>DateIssued</th>
                        <th>Medication</th>
                        <th>Dosage</th>
                        <th>Instructions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var prescVM in Model)
                    {
                        <tr>
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="@Url.Action("Edit_Prescription","Admin", new { PrescId =prescVM.Presc_ID })">
                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                        </a>

                                        <a class="dropdown-item" href="@Url.Action("Delete_Prescription","Admin", new { PrescId =prescVM.Presc_ID })">
                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>@prescVM.Presc_ID</td>
                            <td>@prescVM.Doctor_ID</td>
                            <td>@prescVM.Patient_ID</td>

                            <td>@prescVM.DateIssued</td>
                            <td>@prescVM.Medication</td>
                            <td>@prescVM.Dosage</td>
                            <td>@prescVM.Instructions</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="see-all">
            <a class="see-all-btn" href="javascript:void(0);">More</a>
        </div>
    </div>
</div>
        </div>