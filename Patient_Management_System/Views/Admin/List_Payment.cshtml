
@{
    ViewBag.Title = "List_Payment";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}



<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Payment</h4>
    </div>

    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="@Url.Action("Add_Payment", "Admin")" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Payment</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-border table-striped custom-table datatable mb-0">
                <thead>

                    <tr>
                        <th></th>
                        <th>PAYMENT ID</th>
                        <th> PATIENT ID </th>
                        <th>AMOUNT</th>
                        <th>PAYMENT METHOD</th>
                        <th>PAYMENT DATE</th>
                        <th>STATUS</th>
                        <th>REMARKS</th>

                    </tr>
                </thead>

                <tbody>


                    @foreach (var item in Model)
                    {


                        <tr>

                            <td>
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="@Url.Action("Edit_Payment", new { paymentId = item.Payment_ID })">
                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                        </a>

                                        <a class="dropdown-item" href="@Url.Action("Delete_Payment", new { paymentId = item.Payment_ID })">
                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>@item.Payment_ID</td>
                            <td>@item.Patient_ID </td>
                            <td>@item.Amount</td>
                            <td> @item.PaymentMethod</td>
                            <td> @item.PaymentDate</td>
                            <td> @item.Status</td>

                            <td> @item.Remarks</td>
                        </tr>
                    }


            </table>
        </div>
    </div>
</div>


