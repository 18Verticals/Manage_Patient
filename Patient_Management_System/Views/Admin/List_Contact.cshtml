@model IEnumerable<Patient_Management_System.Models.ContactUsTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@Html.AntiForgeryToken()


@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-sm-5 col-5">
        <h4 class="page-title">Contact</h4>
    </div>
    <div class="col-sm-7 col-7 text-right m-b-30">

     
        <a href="Add_Contact " class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Add contact</a>

    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-border table-striped custom-table datatable mb-0">
                <thead>

                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th> Email </th>
                        <th>Message</th>
                        <th>Phone</th>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="@Url.Action("Edit_Contact", new { id = item.Feedback_Id })">
                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                        </a>

                                        <a class="dropdown-item" href="@Url.Action("Delete_Contact", new { id = item.Feedback_Id })">
                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>

                            <td>@item.Name</td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Message
                            </td>
                            <td>
                                @item.Phone
                            </td>

                        </tr>
                    }


            </table>
        </div>
       </div>
   </div>
