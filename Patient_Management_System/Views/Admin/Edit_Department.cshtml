
@model Patient_Management_System.ViewModel.DepartmentVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@using (Html.BeginForm("Edit_Specialities", "Admin"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h4 class="page-title">Edit Specialities</h4>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <form>
                <div class="row">

                    @Html.HiddenFor(model => model.Dept_ID)


                    <!-- Department  -->
                    <div class="col-sm-9">
                        <div class="form-group">

                            @Html.EditorFor(model => model.Dept_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Dept_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
        </div>
    </div>


    <!-- Submit Button -->
    <div class="m-t-20 text-center">
        <button class="btn btn-primary submit-btn" style="margin-left:130px; ">Edit Specialities</button>
    </div>
}
