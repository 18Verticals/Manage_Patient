@model Patient_Management_System.Models.ScheduleTbl

@{
    ViewBag.Title = "Delete Schedule";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-danger text-center">Delete Schedule</h2>
        <h4 class="text-center">Are you sure you want to delete this schedule?</h4>
        <hr />

        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Available Date</th>
                        <td>@Html.DisplayFor(model => model.Available_Date)</td>
                    </tr>
                    <tr>
                        <th>Start Time</th>
                        <td>@Html.DisplayFor(model => model.Start_Time)</td>
                    </tr>
                    <tr>
                        <th>End Time</th>
                        <td>@Html.DisplayFor(model => model.End_Time)</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>@Html.DisplayFor(model => model.Status)</td>
                    </tr>
                    <tr>
                        <th>Department</th>
                        <td>@Html.DisplayFor(model => model.DepartmentTbl.Dept_Name)</td>
                    </tr>
                    <tr>
                        <th>Doctor</th>
                        <td>Dr. @Html.DisplayFor(model => model.DoctorTbl.Dr_FirstName)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa fa-trash"></i> Delete
                </button>
                <a href="@Url.Action("Schedule", "Doctor")" class="btn btn-secondary btn-lg">
                    <i class="fa fa-arrow-left"></i> Back to List
                </a>
            }
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: auto;
        border-radius: 10px;
    }

    th {
        background-color: #f8f9fa;
        text-align: left;
        padding: 10px;
    }

    td {
        padding: 10px;
    }
</style>
