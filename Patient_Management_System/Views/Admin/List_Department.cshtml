@{
    ViewBag.Title = "List Department";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}



@using (Html.BeginForm("List_Department", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/bootstrap-datetimepicker.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-5 col-5">
            <h4 class="page-title">Specialities</h4>
        </div>
        <div class="col-sm-7 col-7 text-right m-b-30">
            <a href="Add_Department " class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Add Specialities</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-border table-striped custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th>ACTION</th>
                            <th>ID</th>
                            <th>SPECIALITIES NAME</th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var departmentVM in Model)
                        {

                            <tr>
                                <td >                                   
                                            <a class="dropdown-item" href="@Url.Action("Edit_Department", new { deptId = departmentVM.Dept_ID })">
                                                <i class="fa fa-pencil m-r-5"></i> 
                                            </a>
                                            <a class="dropdown-item" href="@Url.Action("Delete_Department", new { deptId = departmentVM.Dept_ID })">
                                                <i class="fa fa-trash-o m-r-5"></i> 
                                            </a>                                       
                                </td>
                                <td>@departmentVM.Dept_ID</td>
                                <td>@departmentVM.Dept_Name</td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="sidebar-overlay" data-reff=""></div>
    <script src="assets/js/jquery-3.2.1.min.js"></script>
    <script src="assets/js/popper.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/jquery.slimscroll.js"></script>
    <script src="assets/js/select2.min.js"></script>
    <script src="assets/js/jquery.dataTables.min.js"></script>
    <script src="assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="assets/js/moment.min.js"></script>
    <script src="assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="assets/js/app.js"></script>


    <div class="row">
        <div class="col-sm-12">
            <div class="see-all">
                <a class="see-all-btn" href="javascript:void(0);">More</a>
            </div>
        </div>
    </div>
}