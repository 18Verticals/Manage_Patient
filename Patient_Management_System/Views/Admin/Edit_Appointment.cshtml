@model Patient_Management_System.ViewModel.AppointmentVM
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@using (Html.BeginForm("Edit_Appointment", "Admin", FormMethod.Post))
{@Html.AntiForgeryToken()
<link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/bootstrap-datetimepicker.min.css" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/style.css">
<meta name="viewport" content="width=device-width, initial-scale=1.0">


@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">

    <div class="col-lg-8 offset-lg-2">
        <h4 class="page-title">Edit Appointment</h4>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="row">

            @Html.HiddenFor(m => m.Appointment_ID)

            <!-- Doctor -->
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Doctor Name</label>
                    @Html.EditorFor(model => model.Doctor_ID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Doctor_ID, "", new { @class = "text-danger" })

                </div>
            </div>


            <!-- Department -->
            <div class="col-sm-4">
                <div class="form-group">

                    <label>Department</label>
                    @Html.DropDownList("Dept_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Dept_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Email -->
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Description -->
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Description</label>
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Diseases -->
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Diseases</label>
                    @Html.EditorFor(model => model.Diseases, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Diseases, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group">
                    <label>Date</label>
                    @Html.EditorFor(model => model.Apt_Date, new { htmlAttributes = new { @class = "form-control", type = "date", min = DateTime.Now.ToString("yyyy-MM-dd") } })
                    @Html.ValidationMessageFor(model => model.Apt_Date, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-sm-6">
                <div class="form-group">
                    <label>Booking Slot</label>

                    @Html.DropDownListFor(model => model.Apt_Time, ViewBag.TimeSlots as List<SelectListItem>, "-- Select Time --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Apt_Time, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
</div>

<div>
    <button type="submit" class="btn btn-primary">Update Appointment</button>
</div>
}
