@model Patient_Management_System.ViewModel.PatientVM

@{
    ViewBag.Title = "Add_Patient";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}



@using (Html.BeginForm("Add_Patient", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/bootstrap-datetimepicker.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/assets/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="row">

        <div class="col-lg-8 offset-lg-2">
            <h4 class="page-title">Add Patient</h4>
        </div>

    </div>


    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="row">



                <div class="col-sm-4">
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.EditorFor(model => model.P_FirstName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Middle Name</label>
                        @Html.EditorFor(model => model.P_MiddleName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_MiddleName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Last Name</label>
                        @Html.EditorFor(model => model.P_LastName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_LastName, "", new { @class = "text-danger" })
                    </div>
                </div>



                <!-- Gender -->
                <div class="col-sm-4">
                    <div class="form-group gender-select">
                        <label class="gen-label">Gender:</label>
                        <div class="form-check-inline">
                            @Html.RadioButtonFor(model => model.P_Gender, "Male", new { @class = "form-check-input", @id = "Dr_Gender_Male" })
                            <label for="Dr_Gender_Male" class="form-check-label">Male</label>
                        </div>
                        <div class="form-check-inline">
                            @Html.RadioButtonFor(model => model.P_Gender, "Female", new { @class = "form-check-input", @id = "Dr_Gender_Female" })
                            <label for="Dr_Gender_Female" class="form-check-label">Female</label>
                        </div>
                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.P_Gender, "", new { @class = "text-danger" })
                    </div>
                </div>




                @*<div class="col-sm-4">
                    <div class="form-group">
                        <label>Date Of Birth</label>
                        <div class="cal-icon">
                            @Html.TextBoxFor(model => model.P_DOB, "{0:yyyy-MM-dd}", new { @class = "form-control datetimepicker", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.P_DOB, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                <!-- Date of Birth -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Date Of Birth</label>
                            @Html.TextBoxFor(model => model.P_DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", max = DateTime.Now.ToString("yyyy-MM-dd") })
                            @Html.ValidationMessageFor(model => model.P_DOB, "", new { @class = "text-danger" })                     
                    </div>
                 </div>


                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Blood Group</label>

                        @Html.DropDownListFor(model => model.P_BloodGrp, new SelectList(new List<SelectListItem>
                        {
                            new SelectListItem { Text = "A+", Value = "A+" },
                            new SelectListItem { Text = "A-", Value = "A-" },
                            new SelectListItem { Text = "B+", Value = "B+" },
                            new SelectListItem { Text = "B-", Value = "B-" },
                            new SelectListItem { Text = "AB+", Value = "AB+" },
                            new SelectListItem { Text = "AB-", Value = "AB-" },
                            new SelectListItem { Text = "O+", Value = "O+" },
                            new SelectListItem { Text = "O-", Value = "O-" }
                        }, "Value", "Text"), new { @class = "form-control select" })
                        @Html.ValidationMessageFor(model => model.P_BloodGrp, "", new { @class = "text-danger" })
                    </div>
                </div>


                <!-- Email -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.EditorFor(model => model.P_Email, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_Email, "", new { @class = "text-danger" })
                    </div>
                </div>




                <!-- Phone -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.EditorFor(model => model.P_Phone, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_Phone, "", new { @class = "text-danger" })
                    </div>
                </div>



                <!-- Address -->
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Address</label>
                        @Html.EditorFor(model => model.P_Address, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_Address, "", new { @class = "text-danger" })
                    </div>
                </div>


                <!-- City -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>City</label>
                        @Html.EditorFor(model => model.P_City, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_City, "", new { @class = "text-danger" })
                    </div>
                </div>



                <!-- State -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>State</label>
                        @Html.EditorFor(model => model.P_State, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_State, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Pincode -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Pincode</label>
                        @Html.EditorFor(model => model.P_Pincode, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_Pincode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Message -->
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Message</label>
                        @Html.EditorFor(model => model.P_Message, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.P_Message, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Image -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Image</label>
                        <div class="profile-upload">

                            <div class="upload-img">
                                <img alt="" src="~/Content/Admin/assets/img/user.jpg" />
                            </div>

                            <div class="upload-input">
                                <input type="file" name="P_Image" id="P_Image" class="form-control" />
                            </div>
                            @Html.ValidationMessageFor(model => model.P_Image, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <!-- Password -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" name="P_Password" id="P_Password" type="password" />
                        @Html.ValidationMessageFor(model => model.P_Password, "", new { @class = "text-danger" })
                    </div>
                </div>



                <!-- Submit Button -->
                <div class="m-t-20 text-center">
                    <button class="btn btn-primary submit-btn" style="margin-left:275px;">Add Patient</button>
                </div>

            </div>
            </div>
        </div>
      }


