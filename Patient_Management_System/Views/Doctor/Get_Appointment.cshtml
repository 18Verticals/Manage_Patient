@model List<Patient_Management_System.ViewModel.AppointmentVM>

@{
    ViewBag.Title = "Doctor Appointments";
}

<h2>Your Appointments</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No appointments found.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Appointment ID</th>
                <th>Patient ID</th>
                <th>Appointment Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Appointment_ID</td>
                    <td>@appointment.Patient_ID</td>
                    <td>@appointment.Apt_Date.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("Logout", "Doctor")" class="btn btn-danger">Logout</a>


