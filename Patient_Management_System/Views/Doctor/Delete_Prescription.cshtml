@model Patient_Management_System.Models.PrescriptionTbl

@{
    ViewBag.Title = "Delete prescription";
    Layout = "~/Views/Shared/_Layout_Doctor.cshtml";
}

@*<div class="container mt-4 text-center">
    <h2 class="text-danger">Delete Schedule</h2>
    <p class="text-muted">Are you sure you want to delete this schedule?</p>*@

    <!-- Delete Button to Open Modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
        Delete Schedule
    </button>
    <a href="@Url.Action("Prescription", "Doctor")" class="btn btn-secondary">Cancel</a>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/564/564619.png" width="60" alt="Warning Icon">
                <h5 class="mt-3">Are you sure you want to delete this Schedule?</h5>
                <form method="post" action="@Url.Action("Delete_Schedule", "Doctor")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Presc_ID" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS & JS (Include if not already in project) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


