@model Patient_Management_System.Models.DoctorTbl

@{
    ViewBag.Title = "Doctor Login";
}

@using (Html.BeginForm("Dr_Login", "Doctor", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <link href="~/Content/template/assets/images/doctor.png" rel="stylesheet" />

    <div class="login-container">
        <!-- Centered Image -->
        <img src="~/Content/template/assets/images/doctor-new.png" alt="Doctor Login" class="login-image">

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="text-danger">@ViewBag.Message</div>
        }

        <div class="form-horizontal">
            <div class="form-group">
                <div class="form__group field">
                    @Html.EditorFor(model => model.Dr_Email, new { htmlAttributes = new { @class = "form__field", required = "required", placeholder = "Enter your Email" } })
                    @Html.ValidationMessageFor(model => model.Dr_Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form__group field">
                    @Html.PasswordFor(model => model.Dr_Password, htmlAttributes: new { @class = "form__field", required = "required", placeholder = "Enter your Password" })
                    @Html.ValidationMessageFor(model => model.Dr_Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <button value="Login"><b>Submit</b></button>

                @*<br><br>
                <p style="font-size: 14px;">
                    Don't have an Account? <a href="Register" style="text-decoration: none; color: black;"><b>Register</b></a>
                </p>*@
            </div>
        </div>
    </div>
}

<style>
    .login-container {
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        text-align: center;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .login-container {
        width: 100%;
        max-width: 350px;
        margin: 180px auto;
        margin-left: 35%;
        text-align: center;
        padding: 20px;
        background: lightblue; /* Background color changed */
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }


    .login-image {
        width: 120px; /* Adjust the size as needed */
        height: auto;
        display: block;
        margin: 0 auto 20px;
    }

    .form__group {
        margin-bottom: 15px;
    }

    .form__field {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        width: 40%;
        padding: 10px;
        background-color: #000;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>
