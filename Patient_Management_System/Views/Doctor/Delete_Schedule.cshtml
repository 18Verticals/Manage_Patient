@model Patient_Management_System.Models.ScheduleTbl

@{
    ViewBag.Title = "Delete Schedule";
}

<h2>Delete Schedule</h2>
<p>Are you sure you want to delete this schedule?</p>

<form action="@Url.Action("Delete_ScheduleConfirmed", "Doctor")" method="post">
    <input type="hidden" name="Schedule_ID" value="@Model" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("List_Schedule", "Doctor")" class="btn btn-secondary">Cancel</a>
</form>
