@model List<Patient_Management_System.ViewModel.AppointmentVM>
@{
    Layout = "~/Views/Shared/_Layout_Doctor.cshtml";
    ViewBag.Title = "Doctor Appointments";
}

<div class="container">
    <div class="image-textbox-container">
        <img src="~/Content/Doctor/img/p1.png" alt="Doctor Image" class="doctor-image">
        @*<input type="text" placeholder="Search Patient..." class="textbox" />*@
        <a href="@Url.Action("Today_Appointments", "Doctor")" class="today-btn">Today's Appointments</a>
    </div>
</div>

<div class="table-container">
    <table class="styled-table">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Appointment Date</th>
                <th>Phone</th>
                <th>Diseases</th>
                <th>Apt_Time</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.P_FirstName</td>
                    <td>@(appointment.Apt_Date.HasValue ? appointment.Apt_Date.Value.ToString("dd-MM-yyyy") : "N/A")</td>
                    <td>@appointment.Phone</td>
                    <td>@appointment.Diseases</td>
                    <td>@appointment.Apt_Time</td>
                    <td>@appointment.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        text-align: center;
        margin-bottom: 20px;
    }

    .image-textbox-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .doctor-image {
        width: 150px;
        height: auto;
        border-radius: 8px;
    }

    .textbox {
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .today-btn {
        padding: 8px 15px;
        font-size: 16px;
        color: white;
        background-color: #000000;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
    }

        .today-btn:hover {
            background-color: #218838;
        }
</style>
