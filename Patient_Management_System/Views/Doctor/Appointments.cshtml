@model List<Patient_Management_System.ViewModel.AppointmentVM>



@{
    Layout = "~/Views/Shared/_Layout_Doctor.cshtml";

    ViewBag.Title = "Doctor Appointments";
}

<h2>Appointments for Dr. @Session["Dr_FirstName"]</h2>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Container</title>
    <style>
        .image-container {
            width: 1000px;
            height: 150px;
            border: 2px solid #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border-radius: 10px;
        }

            .image-container img {
                width: 80%;
                height: auto;
                object-fit: cover;
            }
    </style>
</head>
<body>
    <div class="image-container">
        <img src="https://via.placeholder.com/300" alt="Sample Image">
    </div>

</body>
</html>
<table border="1">
    <tr>
        <th>Patient Name</th>
        <th>Appointment Date</th>
        <th>Phone</th>
        <th>Diseases</th>
        <th>Apt_Time</th>
        <th>Description</th>


    </tr>
    @foreach (var appointment in Model)
    {
        <tr>
            <td>@appointment.P_FirstName</td>
            <td>@(appointment.Apt_Date.HasValue ? appointment.Apt_Date.Value.ToString("dd-MM-yyyy") : "N/A")</td>
            <td>@appointment.Email</td>
            <td>@appointment.Diseases</td>
            <td>@appointment.Apt_Time</td>
            <td>@appointment.Description</td>


        </tr>
    }
</table>


